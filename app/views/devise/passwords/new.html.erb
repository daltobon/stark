<div class="alert-danger"><h6><%= devise_error_messages! %></h6></div> 
<div class="mx-auto col-lg-6">

<h2>¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
 

  <div class="form-group">
    <%= f.label "Ingresa tus datos: " %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
  </div>

  <div class="form-group actions">
    <%= f.submit "Recuperar contraseña", class: 'btn btn-info btn-sm' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>